{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "noGitTagVersion": true,
      "noPrivate": true,
      "ignoreChanges": [
        "*.md",
        "*.json",
        "docs/**",
        "test/**",
        "build/**"
      ],
      "message": "chore(release): publish"
    },
    "publish": {
      "contents": "build"
    }
  }
}
