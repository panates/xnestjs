{
  "name": "xnestjs",
  "description": "NestJS additional packages",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/xnestjs.git"
  },
  "workspaces": [
    "packages/*",
    "!packages/*/build"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "format": "prettier . --write --log-level=warn",
    "build": "rman build",
    "test": "jest --passWithNoTests --detectOpenHandles",
    "precover": "rimraf coverage",
    "cover": "jest --passWithNoTests --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --passWithNoTests --detectOpenHandles --coverage --coverageReporters=lcov"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/testing": "^10.4.7",
    "@panates/eslint-config": "^1.0.21",
    "@panates/eslint-config-ts": "^1.0.21",
    "@panates/tsconfig": "^1.0.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.9",
    "madge": "^8.0.0",
    "npm-run-path": "^6.0.0",
    "prettier": "^3.3.3",
    "putil-varhelpers": "^1.6.5",
    "rimraf": "^6.0.1",
    "rman": "^0.32.0",
    "ts-cleanup": "^1.3.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3"
  }
}
