{
  "name": "xnestjs",
  "description": "NestJS additional packages",
  "private": true,
  "version": "1.1.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/xnestjs.git"
  },
  "workspaces": [
    "packages/*",
    "!packages/*/build"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "format": "prettier . --write --log-level=warn",
    "build": "rman run build",
    "test": "NODE_OPTIONS=\"--no-experimental-require-module --experimental-vm-modules\" jest --passWithNoTests",
    "precover": "rimraf coverage",
    "cover": "jest --passWithNoTests --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "NODE_OPTIONS=\"--no-experimental-require-module --experimental-vm-modules\" jest --passWithNoTests --runInBand --coverage --testTimeout=30000 --bail=10"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/testing": "^11.0.12",
    "@panates/eslint-config": "^2.0.4",
    "@panates/eslint-config-ts": "^2.0.4",
    "@panates/tsconfig": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "madge": "^8.0.0",
    "npm-check-updates": "^17.1.16",
    "npm-run-path": "^6.0.0",
    "prettier": "^3.5.3",
    "putil-varhelpers": "^1.6.5",
    "rimraf": "^6.0.1",
    "ts-cleanup": "^1.3.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "npmlog": "^7.0.1",
    "rimraf": "^6.0.1",
    "glob": "^11.0.1",
    "babel-plugin-istanbul": "^7.0.0",
    "test-exclude": "^7.0.1"
  }
}
