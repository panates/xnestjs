{
  "name": "xnestjs",
  "description": "NestJS additional packages",
  "private": true,
  "version": "1.1.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/xnestjs.git"
  },
  "workspaces": [
    "packages/*",
    "!packages/*/build"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "build": "rman run build",
    "lint": "rman run lint",
    "format": "prettier . --write --log-level=warn",
    "test": "mocha",
    "precitest": "rimraf coverage reports",
    "citest": "nyc mocha",
    "qc": "rman run lint && rman run check && rman run compile"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/testing": "^11.1.9",
    "@panates/eslint-config": "^2.0.6",
    "@panates/eslint-config-ts": "^2.0.6",
    "@panates/tsconfig": "^2.0.6",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@swc/helpers": "^0.5.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/sinon": "^21.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "madge": "^8.0.0",
    "mocha": "^11.7.5",
    "npm-check-updates": "^19.1.2",
    "nyc": "^17.1.0",
    "npm-run-path": "^6.0.0",
    "prettier": "^3.7.4",
    "putil-varhelpers": "^1.6.5",
    "rimraf": "^6.1.2",
    "ts-cleanup": "^1.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
