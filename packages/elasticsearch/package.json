{
  "name": "@xnestjs/elasticsearch",
  "version": "1.12.3",
  "description": "NestJS extension library for ElasticSearch",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "tsc -b tsconfig-build.json",
    "postbuild": "node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "mocha",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:build && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:build": "rimraf build *.tsbuildinfo",
    "clean:cover": "rimraf coverage"
  },
  "dependencies": {
    "@jsopen/objects": "^2.0.2",
    "ansi-colors": "^4.1.3",
    "putil-varhelpers": "^1.6.5",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": "^7.4.0 || ^8.0.0 || ^9.0.0",
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/elasticsearch": "^10.0.0 || ^11.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "expect": "^30.2.0",
    "ts-gems": "^3.11.3"
  },
  "type": "module",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20.0"
  },
  "repository": {
    "registry": "https://github.com/panates/xnestjs.git",
    "directory": "packages/elasticsearch"
  },
  "keywords": [
    "nestjs",
    "elasticsearch"
  ],
  "publishConfig": {
    "access": "public"
  }
}
